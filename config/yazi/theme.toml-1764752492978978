# Sevastopol Station Theme for Yazi
# Aesthetic: Industrial Lo-Fi Sci-Fi (Alien: Isolation)
# vim:fileencoding=utf-8:foldmethod=marker

# : Manager {{{

[manager]
cwd = { fg = "#5fb3b3" } # Sevastopol Cyan

# Hovered
hovered = { reversed = true, bold = true }
preview_hovered = { underline = true }

# Find
find_keyword = { fg = "#ebcb8b", italic = true } # Amber
find_position = { fg = "#d08770", bg = "reset", italic = true } # Orange/Rust

# Marker
marker_copied = { fg = "#a3be8c", bg = "#a3be8c" } # Green
marker_cut = { fg = "#bf616a", bg = "#bf616a" }    # Red
marker_marked = { fg = "#5fb3b3", bg = "#5fb3b3" } # Cyan
marker_selected = { fg = "#ebcb8b", bg = "#ebcb8b" } # Amber

# Tab
tab_active = { fg = "#0e1013", bg = "#5fb3b3" }    # Dark bg on Cyan
tab_inactive = { fg = "#aab2bf", bg = "#2e3440" }  # Grey on Surface
tab_width = 1

# Count
count_copied = { fg = "#0e1013", bg = "#a3be8c" }
count_cut = { fg = "#0e1013", bg = "#bf616a" }
count_selected = { fg = "#0e1013", bg = "#ebcb8b" }

# Border
border_symbol = "│"
border_style = { fg = "#4c566a" } # Muted Grey

# : }}}

# : Mode {{{

[mode]
normal_main = { fg = "#0e1013", bg = "#5fb3b3", bold = true } # Cyan block
normal_alt = { fg = "#5fb3b3", bg = "#2e3440" }
select_main = { fg = "#0e1013", bg = "#ebcb8b", bold = true } # Amber block
select_alt = { fg = "#ebcb8b", bg = "#2e3440" }
unset_main = { fg = "#0e1013", bg = "#b48ead", bold = true }  # Purple block
unset_alt = { fg = "#b48ead", bg = "#2e3440" }

# : }}}

