# : File-specific styles {{{

[filetype]
rules = [
  # Images
  { mime = "image/*", fg = "#bd93f9" }, # Purple

  # Media
  { mime = "{audio,video}/*", fg = "#f1fa8c" }, # Yellow

  # Archives
  { mime = "application/*zip", fg = "#bf616a" }, # Red
  { mime = "application/x-{tar,bzip*,7z-compressed,xz,rar}", fg = "#bf616a" },

  # Documents
  { mime = "application/{pdf,doc,rtf,vnd.*}", fg = "#8be9fd" }, # Cyan

  # Fallback
  { name = "*", fg = "#eceff4" }, # White
  { name = "*/", fg = "#ffb86c" }, # Primary Amber for Folders
]

# : }}}

