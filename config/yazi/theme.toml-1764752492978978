# : File-specific styles {{{

[filetype]
rules = [
  # Images
  { mime = "image/*", fg = "#b48ead" }, # Purple

  # Media
  { mime = "{audio,video}/*", fg = "#d08770" }, # Orange

  # Archives
  { mime = "application/*zip", fg = "#bf616a" }, # Red
  { mime = "application/x-{tar,bzip*,7z-compressed,xz,rar}", fg = "#bf616a" },

  # Documents
  { mime = "application/{pdf,doc,rtf,vnd.*}", fg = "#88c0d0" }, # Light Blue

  # Fallback
  { name = "*", fg = "#eceff4" }, # White
  { name = "*/", fg = "#5fb3b3" }, # Cyan
]

# : }}}

