# Sevastopol Station Theme for Yazi
# Aesthetic: Industrial Lo-Fi Sci-Fi (Alien: Isolation)

# : Manager {{{

[manager]
cwd = { fg = "#ffb86c" } # Primary Amber

# Hovered
hovered = { reversed = true, bold = true }
preview_hovered = { underline = true }

# Find
find_keyword = { fg = "#ffb86c", italic = true } # Primary Amber
find_position = { fg = "#8be9fd", bg = "reset", italic = true } # Accent Cyan

# Marker
marker_copied = { fg = "#a3be8c", bg = "#a3be8c" } # Green
marker_cut = { fg = "#bf616a", bg = "#bf616a" }    # Red
marker_marked = { fg = "#8be9fd", bg = "#8be9fd" } # Accent Cyan
marker_selected = { fg = "#ffb86c", bg = "#ffb86c" } # Primary Amber

# Tab
tab_active = { fg = "#0e1013", bg = "#ffb86c" }    # Dark text on Primary Amber
tab_inactive = { fg = "#aab2bf", bg = "#2e3440" }  # Grey on Surface
tab_width = 1

# Count
count_copied = { fg = "#0e1013", bg = "#a3be8c" }
count_cut = { fg = "#0e1013", bg = "#bf616a" }
count_selected = { fg = "#0e1013", bg = "#ffb86c" } # Amber

# Border
border_symbol = "│"
border_style = { fg = "#8be9fd" } # Accent Cyan for borders

# : }}}

# : Mode {{{

[mode]
normal_main = { fg = "#0e1013", bg = "#ffb86c", bold = true } # Primary Amber Block
normal_alt = { fg = "#ffb86c", bg = "#2e3440" }
select_main = { fg = "#0e1013", bg = "#8be9fd", bold = true } # Accent Cyan Block
select_alt = { fg = "#8be9fd", bg = "#2e3440" }
unset_main = { fg = "#0e1013", bg = "#bd93f9", bold = true }  # Purple for Unset
unset_alt = { fg = "#bd93f9", bg = "#2e3440" }

# : }}}

