[global]
# --- GEOMETRY ---
width = 350
# Dynamic height is usually better so single lines don't look huge
height = (0, 200) 
  origin = top-right
offset = (20,20)
  notification_limit = 5

# --- APPEARANCE (Sevastopol) ---
  font = JetBrainsMono Nerd Font Bold 12
  icon_theme = Papirus-Dark
  enable_recursive_icon_lookup = true

# The "Boxy" Look
  corner_radius = 0
  frame_width = 3
  frame_color = "#ffb86c"

# Separators (Lines between notifications)
  separator_color = frame
  separator_height = 2

# Padding (Internal spacing - crucial for the "Panel" look)
  padding = 12
  horizontal_padding = 12
  text_icon_padding = 10

# --- PROGRESS BARS ---
  progress_bar = true
# Chunky bars
  progress_bar_height = 10
  progress_bar_frame_width = 1
  progress_bar_min_width = 150
  progress_bar_max_width = 320
  progress_bar_corner_radius = 0

# Text
  markup = full
  alignment = left
  vertical_alignment = center
  ellipsize = middle

# --- ICONS ---
  icon_position = left
  min_icon_size = 32
  max_icon_size = 48

  [urgency_low]
# Dimmed state for low priority
  background = "#0d0d0d"
  foreground = "#666666" 
  frame_color = "#ffb86c"
  highlight = "#ffb86c"
  timeout = 3

  [urgency_normal]
# Standard Sevastopol Interface
  background = "#0d0d0d"
  foreground = "#e0e0e0"
  frame_color = "#ffb86c"
  highlight = "#ffb86c"
  timeout = 6

  [urgency_critical]
# HULL BREACH / ALARM STATE
# Solid Red Background, Black Text
  background = "#ff5555"
  foreground = "#0d0d0d"
  frame_color = "#ff5555"
# Black progress bar on Red background (High Contrast Hazard style)
  highlight = "#0d0d0d"
  timeout = 0
